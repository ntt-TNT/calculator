                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="x!"
                android:textAllCaps="false"
                android:textSize="25sp" />


            <Button
                android:id="@+id/button_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="x^2"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="x^3"
                android:textAllCaps="false"
                android:textSize="25sp" />


            <Button
                android:id="@+id/button_1x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="1/x"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_ex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="e^x"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_10x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="10^x"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_extract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="âˆš"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="%"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="log"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="ln"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_vertical"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="e"
                android:textAllCaps="false"
                android:textSize="25sp" />
            <Button
                android:id="@+id/button_pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_vertical"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="PI"
                android:textAllCaps="false"
                android:textSize="25sp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gridlayout"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="12dp"
            android:rowCount="5"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/gridLayout_left"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/button_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onClearClick"
                android:text="C"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onDeleteClick"
                android:text="Del"
                android:textAllCaps="false"
                android:textSize="25sp" />



            <Button
                android:id="@+id/button_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="/"
                android:textColor="#2196F3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="*"
                android:textColor="#2196F3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="-"
                android:textColor="#2196F3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="+"
                android:textColor="#2196F3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_eql"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_vertical"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/equ_button"
                android:onClick="onResultClick"
                android:text="="
                android:textColor="@color/white"
                android:textSize="25sp" />


            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onNumberButtonClick"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:layout_gravity="fill_horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_button"
                android:onClick="onSymbolButtonClick"
                android:text="."
