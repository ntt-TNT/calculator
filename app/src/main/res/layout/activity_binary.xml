<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BinaryActivity"
    android:id="@+id/activity_nav">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_margin="0dp"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/constraintLayout">

        <LinearLayout
            android:id="@+id/topMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:gravity="fill"
            android:orientation="horizontal"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/main_menu"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:gravity="fill"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.92"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edit_num1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""/>

                    <com.weigan.loopview.LoopView
                        android:layout_marginTop="15dp"
                        android:id="@+id/loopView1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:awv_textsize="18"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        app:awv_isLoop="false"/>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重置"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转换为"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edit_num2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""/>

                    <com.weigan.loopview.LoopView
                        android:layout_marginTop="15dp"
                        android:id="@+id/loopView2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:awv_textsize="18"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        app:awv_isLoop="false"/>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="重置" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20sp">

                <com.weigan.loopview.LoopView
                    android:id="@+id/loopView_girth"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    app:awv_isLoop="false"
                    app:awv_textsize="18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editText_girth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="边长以,分隔"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/loopView_girth"
                    app:layout_constraintTop_toTopOf="@+id/loopView_girth" />

                <Button
                    android:id="@+id/button_girth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周长为 "
                    android:textSize="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/button_area"
                    app:layout_constraintStart_toEndOf="@+id/loopView_girth" />

                <TextView
                    android:id="@+id/girth_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/button_girth"
                    app:layout_constraintTop_toTopOf="@+id/button_girth" />

                <Button
                    android:id="@+id/button_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面积为 "
                    android:textSize="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/loopView_girth" />

                <TextView
                    android:id="@+id/area_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/button_area"
                    app:layout_constraintTop_toTopOf="@+id/button_area" />


            </androidx.constraintlayout.widget.ConstraintLayout>





        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.navigation.NavigationView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/head"
        app:menu="@menu/menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>